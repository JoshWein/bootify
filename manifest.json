{	
	"name": "bootify - A Bootstrap Extension",
	"version": "0.8",
	"permissions": [
    	"activeTab",
    	"storage",
    	"tabs",
    	"contextMenus"
  	],
  	"background": {
  		"scripts": ["background.js"],
  		"persistent": false
	},	
	"browser_action": {
		"default_title": "Add bootstrap to page."
	},
	"manifest_version": 2,
	"options_page": "options.html",
	"content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["load.js"]
    }]
}
